<header
  class="bg-white w-full flex flex-wrap justify-between items-center mx-auto px-6 py-2 fixed top-0 left-0 z-[1030] md:relative"
>
  <!-- logo -->
  <div class="inline-flex">
    <a class="hover:text-primary" href="/">
      <div class="flex items-center">
        <img src="/assets/logo.png" alt="Sasquatch Devs logo" width={50} height={52} />
        <p class="hidden md:block text-2xl">Sasquatch Devs</p>
      </div>
    </a>
  </div>

  <!-- end logo -->

  <!-- mobile menu -->
  <button type="button" class="block md:hidden p-3 relative" onclick="toggleMobileNav()">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      viewBox="0 0 24 24"
      stroke-width="1.5"
      stroke="currentColor"
      class="w-6 h-6"
    >
      <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"
      ></path>
    </svg>
  </button>
  <nav
    id="mobile_nav"
    class="hidden md:flex absolute md:relative md:self-end left-0 md:left-auto right-0 md:right-auto top-16 md:top-auto bg-white h-auto flex-grow items-center mt-4 md:mt-0 md:justify-end"
  >
    <ul class="p-4 md:p-0 md:px-4 items-center flex flex-col md:flex-row">
      <li class="py-2 md:px-2 border-b md:border-none border-b-gray-200 w-full">
        <a href="#Services" class="text-lg text-center md:hover:underline hover:text-primary">Services</a>
      </li>
      <li class="py-2 md:px-2 border-b md:border-none border-b-gray-200 w-full">
        <a href="#Industries" class="text-lg text-center md:hover:underline hover:text-primary">Industries</a>
      </li>
      <li class="py-2 md:px-2 border-b md:border-none border-b-gray-200 w-full">
        <a href="#Skills" class="text-lg text-center md:hover:underline hover:text-primary">Skills</a>
      </li>
      <li class="py-2 md:px-2 border-b md:border-none border-b-gray-200 w-full">
        <a href="#Project" class="text-lg text-center md:hover:underline hover:text-primary">Project</a>
      </li>
      <li class="py-2 md:px-2 border-b md:border-none border-b-gray-200 w-full">
        <a href="#Benefits" class="text-lg text-center md:hover:underline hover:text-primary">Benefits</a>
      </li>
      <li class="py-2 md:px-2 border-b md:border-none border-b-gray-200 w-full">
        <a href="#Contact" class="text-lg text-center md:hover:underline hover:text-primary">Contact</a>
      </li>
    </ul>
  </nav>
  <!-- end mobile menu -->
  <!-- Normal Nav -->
</header>

<script is:inline>
  function toggleMobileNav() {
    const mobile_nav = document.getElementById("mobile_nav");
    if (mobile_nav.classList.contains("hidden")) {
      mobile_nav.classList.remove("hidden");
      mobile_nav.classList.add("block");
    } else {
      mobile_nav.classList.remove("block");
      mobile_nav.classList.add("hidden");
    }
  }
</script>
