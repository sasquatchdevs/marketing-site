<header
  class="bg-white w-full flex flex-wrap justify-between items-center mx-auto px-6 py-2 fixed top-0 left-0 z-[1030]"
>
  <!-- logo -->
  <div class="inline-flex">
    <a class="" href="/">
      <div class="flex items-center">
        <img src="/assets/logo.png" alt="Sasquatch Devs logo" width={50} height={52} />
        <p class="hidden md:block text-2xl">Sasquatch Devs</p>
      </div>
    </a>
  </div>

  <!-- end logo -->

  <!-- mobile menu -->
  <button type="button" class="block md:hidden p-3 relative" onclick="toggleMobileNav()">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      viewBox="0 0 24 24"
      stroke-width="1.5"
      stroke="currentColor"
      class="w-6 h-6"
    >
      <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"
      ></path>
    </svg>
  </button>
  <nav
    id="mobile_nav"
    class="block md:hidden absolute left-0 right-0 top-16 bg-white h-auto flex-grow items-center mt-4"
  >
    <ul class="p-4 items-center flex flex-col">
      <li class="py-2 border-b border-b-gray-200 w-full">
        <a href="#Services" class="text-lg font-semibold text-center">Services</a>
      </li>
      <li class="py-2 border-b border-b-gray-200 w-full">
        <a href="#Industries" class="text-lg font-semibold text-center">Industries</a>
      </li>
      <li class="py-2 border-b border-b-gray-200 w-full">
        <a href="#Skills" class="text-lg font-semibold text-center">Skills</a>
      </li>
      <li class="py-2 border-b border-b-gray-200 w-full">
        <a href="#Project" class="text-lg font-semibold text-center">Project</a>
      </li>
      <li class="py-2 border-b border-b-gray-200 w-full">
        <a href="#Benefits" class="text-lg font-semibold text-center">Benefits</a>
      </li>
      <li class="py-2 border-b border-b-gray-200 w-full">
        <a href="#Contact" class="text-lg font-semibold text-center">Contact</a>
      </li>
    </ul>
  </nav>
  <!-- end mobile menu -->
</header>

<script is:inline>
  function toggleMobileNav() {
    const mobile_nav = document.getElementById("mobile_nav");
    if (mobile_nav.classList.contains("hidden")) {
      mobile_nav.classList.remove("hidden");
      mobile_nav.classList.add("block");
    } else {
      mobile_nav.classList.remove("block");
      mobile_nav.classList.add("hidden");
    }
  }
</script>
